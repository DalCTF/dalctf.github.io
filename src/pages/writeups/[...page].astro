---
import type { GetStaticPaths, Page } from "astro";
import { getCollection, type CollectionEntry } from "astro:content";

import { getEntry } from "astro:content";
import Button from "../../components/Button.astro";
import Hero from "../../components/Hero.astro";
import Pagination from "../../components/Pagination.astro";
import Spacer from "../../components/Spacer.astro";
import Writeup from "../../components/Writeup.astro";
import Layout from "../../layouts/Layout.astro";
import { summary } from "../../util/markdown";

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
    const writeups = await getCollection("writeups");
    const pairs = [];

    for (let writeup of writeups) {
        const competition = await getEntry({
            collection: "competitions",
            id: writeup.data.competition,
        });

        pairs.push({ writeup, competition });
    }

    pairs.sort(
        (a, b) =>
            b.competition.data.dateStart.getTime() -
            a.competition.data.dateStart.getTime(),
    );

    return paginate(pairs, {
        pageSize: 5,
    });
};

type Props = {
    page: Page<{
        writeup: CollectionEntry<"writeups">;
        competition: CollectionEntry<"competitions">;
    }>;
};

const { page } = Astro.props;
---

<Layout title="Writeups | Status 418" description="">
    <!-- Hero -->
    <Hero title="Writeups" />

    <!-- List of writeups -->
    <section>
        {
            page.data.map(({ writeup, competition }) => (
                <div>
                    <Writeup
                        snippet={summary(writeup.data.raw, 300).text}
                        competitionId={writeup.data.competition}
                        title={writeup.data.title}
                        tags={writeup.data.tags}
                    />
                    <Spacer height={24} />
                    <Button
                        text="Read more"
                        url={"/writeups/" + writeup.data.id}
                    />
                </div>
            ))
        }
    </section>

    <!-- Pagination controls -->
    <Pagination page={page} />
</Layout>

<style lang="scss">
    @use "../../styles/variables" as *;

    div {
        margin-bottom: 80px;
    }
</style>
