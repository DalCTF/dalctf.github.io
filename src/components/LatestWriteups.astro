---
import { getCollection } from "astro:content";

import Card from "./Card.astro";
import Preview from "./Preview.astro";
import Writeup from "./Writeup.astro";

const writeups = (await getCollection("writeups")).slice(0, 4);
---

<Preview title="Latest Writeups" url="#">
  <div class="grid">
    {
      writeups.map((writeup) => (
        <div>
          <Card>
            <Writeup
              upper={writeup.data.repo.name}
              title={writeup.data.problem.name}
              tags={[writeup.data.category.name]}
              snippet={writeup.data.summary}
              preview={true}
            />
          </Card>
        </div>
      ))
    }
  </div>
</Preview>

<style lang="scss">
  @use "../styles/variables" as *;

  .grid {
    grid-template-columns: 1fr 50%;
    box-sizing: border-box;
    display: grid;
    gap: 16px;
  }

  .grid div {
    max-width: 100%;
    min-width: 0;
  }
</style>
